<div class="assign-owner-container">
  <h2>Asignar Dueño a {{pet.name}}</h2>
  <form action="/api/pets/{{pet._id}}/assignOwner" method="POST">
    <label for="email">Email del Dueño:</label>
    <input type="email" id="email" name="email" required>
    <button type="submit" class="btn">Asignar Dueño</button>
  </form>
</div>